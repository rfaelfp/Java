package fundamentos;

public class NotacaoPonto {
	
	public static void main(String[] args) {
		
		double a = 2.3;
		String s = "Bom dia X"; // A declaração de string no java é com letra maiuscula. Não é tipo primitivo e não é palavra reservada.
		s = s.replace("X", "Senhora");
		s = s.toUpperCase(); // O método não é alterado ao não ser que faça a atribuição.
		s = s.concat("!!!");
		
		
		System.out.println(s);
		
		System.out.println("Leo".toUpperCase()); // Pode utilizar métodos diretamente de uma string sem a necessidade de armazenar em uma variável.
		String nome = "Rafael".toUpperCase();
		System.out.println(nome);
		
		String y = "Bom dia X".replace("X", "Gui").toUpperCase().concat("!!!");
		System.out.println(y);
		
		
	}

}
