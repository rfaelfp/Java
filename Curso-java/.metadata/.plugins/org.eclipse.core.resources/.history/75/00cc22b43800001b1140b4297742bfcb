package classe;

public class Data {

	int dia;
	int mes;
	int ano;
	
	Data() {
		dia = 1;
		mes = 1;
		ano = 1970;
	}
	
	Data(int diaC, int mesC, int anoC) {
		dia = diaC;
		mes = mesC; 
		ano = anoC;
		
	}
	
	String obterDataFormatada() {
		return String.format("%d/%d/%d", dia, mes, ano);
		
	}
}
